<?xml version="1.0" encoding="UTF-8" ?>
<resources>
	<style name="MyTheme" parent="MyTheme.Base">
		<item name="android:windowContentTransitions">true</item>
		<item name="android:windowAllowEnterTransitionOverlap">true</item>
		<item name="android:windowAllowReturnTransitionOverlap">true</item>
		<item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
		<item name="android:windowSharedElementExitTransition">@android:transition/move</item>
		<item name="android:windowBackground">@color/my_black</item>
		<item name="android:popupMenuStyle">@style/PopupMenu</item>
	</style>
	<style name="TextBase" parent="@android:style/TextAppearance.Medium">
		<item name="android:textColor">@color/my_blue</item>
		<item name="android:background">@color/my_black</item>
	</style>
	<style name="generalButtonStyle">
		<item name="android:background">@color/my_blue</item>
	</style>
	<style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
		<item name="android:popupBackground">@android:color/white</item>
		<item name="android:textColor">@android:color/green</item>
		<item name="android:textSize">12dp</item>
	</style>
	<style name="CenterTitle" parent="TextBase">
		<item name="android:textSize">28dp</item>
		<item name="android:gravity">center</item>
	</style>
	<style name="WebImage">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_gravity">center</item>
	</style>
</resources>