<?xml version="1.0" encoding="UTF-8" ?>
<resources>
	<style name="MyTheme" parent="MyTheme.Base">
		<item name="colorPrimary">@color/my_blue</item>
		<item name="colorAccent">@color/my_purple</item>
		<item name="android:colorPrimary">@color/my_black</item>
		<item name="android:colorAccent">@color/my_black</item>
		<item name="android:windowBackground">@color/my_black</item>
		<item name="android:textColorPrimary">@color/my_blue</item>
		<item name="android:statusBarColor">@color/my_blue</item>
		<item name="android:navigationBarColor">@color/my_blue</item>
		<item name="android:popupMenuStyle">@style/PopupMenu</item>
		<item name="textAppearanceLargePopupMenu">@style/MenuTextLarge</item>
		<item name="textAppearanceSmallPopupMenu">@style/MenuTextSmall</item>
		<item name="android:textColorHint">@color/my_blue</item>
	</style>
	<style name="TextBase">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@color/text</item>
		<item name="android:textSize">16dp</item>
		<item name="android:padding">15dp</item>
	</style>
	<style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
		<item name="android:popupBackground">@android:color/white</item>
	</style>
	<style name="MenuTextLarge">
		<item name="android:textColor">@color/my_black</item>
	</style>
	<style name="MenuTextSmall">
		<item name="android:textColor">@color/my_black</item>
	</style>
	<style name="MyTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
		<item name="windowNoTitle">true</item>
		<item name="windowActionBar">false</item>
		<item name="colorPrimary">#2196F3</item>
		<item name="colorPrimaryDark">#1976D2</item>
		<item name="colorAccent">#FF4081</item>
	</style>
	<style name="CenterTitle" parent="TextBase">
		<item name="android:textSize">28dp</item>
		<item name="android:gravity">center</item>
	</style>
	<style name="WebImage">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_gravity">center</item>
	</style>
</resources>